<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/profileimage"
    android:layout_height="240dp">

    <TextView
        android:text="Chen Rina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblUserName"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/imgUser"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imgUser"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="74dp"
        android:src="@drawable/roy"

        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="112dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imgUser" />

    <TextView
        android:text="chhenrina@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblUsername"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@+id/lblUserName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblUserName"
        app:layout_constraintRight_toRightOf="@+id/lblUserName"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
